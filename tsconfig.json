{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "esModuleInterop": false,
    "target": "es2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
  },
  "include": [
    "src"
  ]
}
